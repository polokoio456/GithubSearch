<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProgressBarTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/color_white</item>
    </style>

    <style name="BaseProgressContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">25dp</item>
        <item name="android:background">@drawable/prgressbar_bg</item>
    </style>

    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ProgressMsgStyle" parent="@style/wrap_wrap">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:singleLine">true</item>
        <item name="android:minEms">8</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
